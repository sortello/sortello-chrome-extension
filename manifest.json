{
  "manifest_version": 2,
  "name": "Sortello Chrome Extension",
  "description": "This extension enables integrated access to Sortello from Trello boards",
  "version": "0.1.1",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://trello.com/*",
        "*://github.com/*"
      ],
      "js": [
        "getLists.js",
        "getListsGithub.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "icon.png"
  ],
  "permissions": [
    "*://trello.com/b/*",
    "*://github.com/b/*",
    "activeTab",
    "tabs",
    "webNavigation",
    "alarms"
  ]
}
